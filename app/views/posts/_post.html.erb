<tr id="post_<%= post.id%>">
  <td><%= post.content %></td>
  <td><%= link_to 'Show', post , remote: true, class: "btn btn-info" %></td>
  <td><%= link_to 'Edit', edit_post_path(post), remote:true, class: "btn btn-primary"%></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, remote:true, class: "btn btn-danger"%></td>
</tr>
